{
  "version": 4,
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/../build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{CMAKE_TOOLCHAIN_FILE}"
      }
    },
    {
      "name": "vcpkg",
      "inherits": "vcpkg-base" 
    },
    {
      "name": "vcpkg-asan",
      "inherits": "vcpkg-base", 
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "ASAN",
        "VCPKG_TARGET_TRIPLET": "$env{VCPKG_ASAN_TRIPLET}",
        "CMAKE_PREFIX_PATH": "${sourceDir}/external",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/external",
        "OVERRIDE_INSTALL_PREFIX": "OFF",
        "DOWNLOAD_TILEDB_PREBUILT": "OFF",
        "TILEDB_REMOVE_DEPRECATIONS": "ON",
        "FORCE_BUILD_TILEDB": "OFF"
      }
    }
  ]
}